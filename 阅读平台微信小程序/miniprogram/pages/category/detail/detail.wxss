page {
  width: calc(100% - 32px);
  padding: 16px;
}

.desc {
  /* padding: 32px; */
  position: relative;
}

.icon-quotation {
  font-size: 40px;
  opacity: 0.1;
  position: absolute;
  top: -11px;
  left: -11px;
}

.info {
  display: flex;
  justify-content: flex-end;
  align-items: center;
  margin-top: 16px;
}

.head-icon {
  width: 32px;
  height: 32px;
  border-radius: 16px;
}

.author {
  font-size: 13px;
  margin: 0 4px;
}

.icon-renzheng {
  color: #ff9f16;
  font-size: 18px;
}

.list {
  display: flex;
  flex-wrap: wrap;
  /* justify-content: space-between; */
  margin-top: 16px;
}

.list-item {
  width: calc((100% - 32px) / 3);
  margin-bottom: 8px;
  margin-right: 16px;
}

.list-item:nth-child(3n) {
  margin-right: 0;
}

/* .list-item>image {
  width: 100%;
  height: 120px;
} */

.list-item>text {
  font-size: 12px;
}

.box>image {
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
}