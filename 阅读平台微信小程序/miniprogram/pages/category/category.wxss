.box {
  width: 100%;
  position: relative;
}

.box>view {
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
}

.box-1x1::before {
  content: '';
  display: block;
  padding-top: 100%;
}

.item-container {
  width: calc((100% - 32px) / 3);
}

.list-item {
  border-radius: 5px;
  background-color: #f00;
  position: relative;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-bottom: 16px;
}

.list-cover {
  border-radius: 5px;
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
}

.list-title {
  color: #fff;
  position: relative;
}

.search-container {
  border: 1px solid #000;
  border-radius: 5px;
  display: flex;
  padding: 4px;
}

.rli {
  padding: 4px;
  border: 1px solid #000;
  border-top: none;
}