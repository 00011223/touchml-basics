page {
  width: calc(100% - 32px);
  padding: 16px;
  padding-bottom: 0;
}

.search-row {
  display: flex;
  margin-bottom: 16px;
}

.search-bar {
  width: 604.6875rpx;
  height: 28px;
  background-color: #cccccc;
  border-radius: 5px;
  color: #8b96a0;
  display: flex;
  justify-content: center;
  align-items: center;
}

.icon-scan {
  font-size: 24px;
}

.scan-container {
  flex-grow: 1;
  display: flex;
  justify-content: flex-end;
  align-items: center;
}

.rank-row {
  display: flex;
  justify-content: space-between;
}

.rank-row>image {
  width: calc((100% - 16px) * 0.5);
  height: 187.5rpx;
  border-radius: 5px;
}

.split {
  display: flex;
  justify-content: space-between;
  justify-content: center;
  padding: 4px 0;
}

.split>.dashed {
  flex-grow: 1;
  border-top: 1px dashed #000;
  position: relative;
  top: 8px;
}

.list {
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
}

