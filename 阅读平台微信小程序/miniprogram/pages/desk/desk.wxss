page {
  height: 100vh;
}

.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  position: relative;
}

.img-container {
  margin-top: 64px;
  width: 120px;
}

.box>swiper {
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
}

.box image {
  width: 100%;
  height: 100%;
}

.nav {
  display: flex;
  padding: 16px 0;
}

.nav-btn {
  width: 20px;
  height: 5px;
  background-color: #cecece;
}

.nav-btn.active {
  background-color: #232323;
}

.icon-caidan {
  font-size: 32px;
  position: absolute;
  top: 16px;
  right: 16px;
}

.cover {
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
  background-color: #fff;

  /* 初始状态 */
  opacity: 0;
  transform: scale(0);

  transition: all 1s;
}

.cover.active {
  /* 打开状态 */
  opacity: 1;
  transform: scale(1);
}

.btns {
  display: flex;
  justify-content: space-between;
  align-items: center;
  box-shadow: 0 5px 5px rgba(0, 0, 0, 0.1);
  padding: 6px 10px;
}

.btn {
  padding: 4px 8px;
  border: 1px solid #cecece;
  font-size: 12px;
  border-radius: 13px;
}

.list {
  display: flex;
  flex-wrap: wrap;
  padding: 16px;
}

.list-item {
  width: calc((100% - 32px) / 3);
  margin-bottom: 8px;
  margin-right: 16px;
  position: relative;
}

.list-item:nth-child(3n) {
  margin-right: 0;
}

.list-item>text {
  font-size: 12px;
}

.box>image {
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
}

.icon-renzheng {
  position: absolute;
  top: 4px;
  right: 4px;
  font-size: 24px !important;
  /* color: orange; */
}

.remove-btn {
  padding: 16px 0;
  width: 100%;
  position: absolute;
  bottom: 0;
  text-align: center;
  background-color: #f00;
  font-weight: bolder;
  color: #fff;
}