page {
  background-color: #ebebeb;
}

page>view {
  background-color: #fff;
}

.info {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 32px 0 0;
  margin-bottom: 16px;
}

.edit {
  position: absolute;
  right: 8px;
  top: 8px;
  font-weight: bolder;
  color: #c9a70c;
}

.head-icon {
  width: 80px;
  height: 80px;
  position: relative;
  margin-bottom: 16px;
}

.head-icon>image {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}

.head-icon>text {
  position: absolute;
  right: -1px;
  bottom: 0;
  font-size: 18px;
}

.icon-icfemale {
  color: pink;
}

.icon-icmale {
  color: rgb(0, 140, 255);
}

.detail-info {
  width: 100%;
  padding: 16px 0;
  font-size: 12px;
  display: flex;
  position: relative;
}

.detail-item {
  flex-grow: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.detail-item>text:nth-child(1) {
  font-weight: bolder;
}

.detail-item>text:nth-child(2) {
  color: #88919b;
}

.line {
  width: 1px;
  height: 16px;
  background-color: #88919b;
  position: absolute;
  left: calc(50% - 1px);
  top: calc(50% - 8px);
}

.detail-info>.icon-arrow-right {
  position: absolute;
  top: calc(50% - 8px);
  right: 8px;
}

.icon-arrow-right {
  color: #88919b;
}

.nav-btns {}

.nav-btns>navigator {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 16px 8px;
}

.icon-editor {
  font-size: 20px;
  position: relative;
  top: 2px;
}

.nav-label {
  font-size: 14px;
  font-weight: bolder;
  margin-left: 8px;
}