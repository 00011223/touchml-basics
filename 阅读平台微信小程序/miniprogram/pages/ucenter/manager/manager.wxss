page {
  background-color: rgb(228, 228, 228);
}

.img-container {
  width: 64px;
  margin-right: 8px;
}

.list-item {
  padding: 8px;
  display: flex;
  justify-content: space-between;
  background-color: #fff;
  margin-bottom: 8px;
}

.left {
  display: flex;
}

.box>image {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
}

.btns {
  display: flex;
  flex-direction: column;
  flex-shrink: 0;
}

.btn {
  flex-grow: 1;
  color: #fff;
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 0 8px;
}

.btn:nth-child(1) {
  background-color: #f00;
}

.btn:nth-child(2) {
  background-color: green;
}