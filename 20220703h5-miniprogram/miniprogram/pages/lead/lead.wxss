page {
  background-color: #f6f6f6;
}

.card {
  padding: 16px;
  background-color: #fff;
  margin-top: 8px;
}

.row1 {
  display: flex;
  align-items: center;
  margin-bottom: 16px;
}

.head-icon {
  width: 40px;
  height: 40px;
  border-radius: 50%;
  margin-right: 16px;
}

.author {
  font-size: 13px;
}

.big-img {
  width: 100%;
  height: 300rpx;
}

.title-row {
  margin-bottom: 8px;
}

.hot {
  background-color: #bc7878;
  color: #fff;
  font-size: 12px;
  padding: 2px 8px;
  border-radius: 12px;
  position: relative;
  top: -1px;
  margin-right: 8px;
}

.intro {
  color: #96989b;
  font-size: 12px;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;

  word-break: break-all;
}

.row-good {
  color: #c1c2c3;
  font-size: 12px;
  display: flex;
  justify-content: space-between;
}